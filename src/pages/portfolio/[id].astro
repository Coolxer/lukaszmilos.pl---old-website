---
import { type CollectionEntry, getCollection, render } from "astro:content"
import data from "~/data/site.json"

import PortfolioLayout from "@layouts/PortfolioLayout.astro"

import { type Meta, type Schema } from "@components/core/MySEO.astro"

export async function getStaticPaths() {
  const posts: CollectionEntry<"portfolio">[] = (
    await getCollection("portfolio")
  ).filter((post) => !post.data.draft)
  return posts.map((post) => ({
    params: { id: post.id },
    props: post,
  }))
}

type Props = CollectionEntry<"portfolio">

const post = Astro.props
const { Content, headings } = await render(post)

const meta: Meta = {
  ...post.data.meta,
}
---

<PortfolioLayout post={post} headings={headings} meta={meta}>
  <Content />
</PortfolioLayout>
